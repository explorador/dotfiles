#!/bin/sh

# Dev Homebrew Setup
# All packages are now in the unified Brewfile at ~/.dotfiles/Brewfile
# This script runs brew bundle if baseline/.brew hasn't been run yet

tput setaf 7
tput smso;  echo " Running dev homebrew setup. "; tput rmso
tput sgr0

# Run brew bundle (idempotent - safe to run multiple times)
brew bundle --file="$HOME/.dotfiles/Brewfile"

echo "Dev homebrew setup complete!"
